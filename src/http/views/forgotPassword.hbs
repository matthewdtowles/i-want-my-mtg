<div class="login-container">
    <h3 class="page-title">Forgot Your Password?</h3>
    <p class="page-subtitle">Enter your email address and we'll send you a link to reset your password.</p>
    <form id="forgot-password-form" class="mt-6" action="/auth/forgot-password" method="post">
        <div class="mb-4">
            <label class="input-label" for="user-email">Email</label>
            <input id="user-email" class="input-field" type="email" name="email" required />
        </div>
        <button id="forgot-password-btn" class="btn btn-primary" type="submit">Send Reset Link</button>
    </form>
    <div class="mt-4 text-center">
        <a href="/auth/login" class="link">
            Back to Login
        </a>
    </div>
</div>
