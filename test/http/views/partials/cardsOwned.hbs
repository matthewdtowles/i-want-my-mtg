<form class="quantity-form flex items-center border border-gray-300 rounded overflow-hidden" data-item-id="{{card.id}}">
    <button type="button"
        class="increment-quantity px-3 py-2 bg-gray-200 text-gray-700 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-300">+</button>
    <input type="number" name="quantity-owned"
        class="quantity-owned form-input w-16 text-center border-l border-r border-gray-300 focus:ring-2 focus:ring-blue-300 focus:outline-none"
        value="{{#if card.quantity}}{{card.quantity}}{{else}}0{{/if}}" data-id="{{card.id}}" />
    <button type="button"
        class="decrement-quantity px-3 py-2 bg-gray-200 text-gray-700 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-300">-</button>
</form>