<script>
    document.addEventListener("DOMContentLoaded", () => {
        const message = document.getElementById("response-message");
        const closeBtn = document.getElementById("toast-close-btn");
        const progressBar = document.getElementById("toast-progress-bar");
        let dismissTimer = null;

        function getStatusDuration() {
            if (message.classList.contains("bg-error")) return 10000;
            if (message.classList.contains("bg-warning")) return 7000;
            return 5000;
        }

        function dismissToast() {
            clearTimeout(dismissTimer);
            message.classList.remove("toast-enter");
            message.classList.add("toast-exit");
            message.addEventListener("animationend", () => {
                message.classList.add("hidden");
                message.classList.remove("toast-exit");
            }, { once: true });
        }

        function showToast() {
            const duration = getStatusDuration();
            message.style.setProperty("--toast-duration", duration + "ms");
            message.classList.remove("hidden");
            message.classList.add("toast-enter");
            dismissTimer = setTimeout(dismissToast, duration);
        }

        closeBtn.addEventListener("click", dismissToast);

        const toastText = message.querySelector(".toast-text");
        if (toastText && toastText.textContent.trim().length > 0) {
            showToast();
        }

        document.getElementById("mobile-menu-button").addEventListener("click", () => {
            const menu = document.getElementById("mobile-menu");
            menu.classList.toggle("hidden");
        });

        function toggleTheme() {
            const isDark = document.documentElement.classList.toggle("dark");
            localStorage.setItem("theme", isDark ? "dark" : "light");
        }

        // Desktop theme toggle
        const desktopToggle = document.getElementById("theme-toggle");
        if (desktopToggle) {
            desktopToggle.addEventListener("click", toggleTheme);
        }

        // Mobile theme toggle
        const mobileToggle = document.getElementById("theme-toggle-mobile");
        if (mobileToggle) {
            mobileToggle.addEventListener("click", toggleTheme);
        }
    });
</script>
