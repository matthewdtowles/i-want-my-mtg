<table class="table-container">
    <thead>
        <tr class="table-header-row">
            <th class="table-header pl-2"># Owned</th>
            <th class="table-header">Card No.</th>
            <th class="table-header">Name</th>
            <th class="table-header">Mana Cost</th>
            <th class="table-header">Rarity</th>
            <th class="table-header pr-2">Price</th>
        </tr>
    </thead>
    <tbody>
        {{#each set.cards}}
        <tr class="table-row">
            <td class="py-2 pl-2">
                {{>cardsOwned card=this}}
            </td>
            <td class="py-2">{{this.number}}</td>
            <td class="py-2">
                <a href="{{this.url}}" class="table-link">{{this.name}}</a>
                {{>reserved card=this}}
            </td>
            <td class="py-2">{{>manaCost card=this}}</td>
            <td class="py-2">{{this.rarity}}</td>
            <td class="py-2 pr-2">${{#if this.price.normal}}{{this.price.normal}}{{else}}0.00{{/if}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="/public/js/updateInventory.js" defer></script>