{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "adapters/http/views/**/*",
        "outDir": "dist"
      },
      {
        "include": "adapters/http/public/**/*",
        "outDir": "dist"
      }
    ]
  }
}
