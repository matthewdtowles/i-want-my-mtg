<div id="user-inventory">
    <h3 id="user-inventory-heading">{{this.username}}'s Inventory</h3>
    <section id="user-inventory-metadata">
        <div id="user-inventory-value" class="user-inventory-metadata-item">
            <p class="user-inventory-metadata-heading">Value</p>
            <p class="user-inventory-metadata-data">{{this.value}}</p>
        </div>
   </section>

    <table id="user-inventory-cards">
        <thead>
            <tr>
                <th>Owned</th>
                <th>Name</th>
                <th>Set</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
        {{#each cards}}
            <tr>
                <td>{{>cardsOwned card=this}}</td>
                <td>
                    <a href="{{card.url}}">{{card.name}}</a>
                    <img src="{{card.imgSrc}}" alt="{{card.name}}" />
                </td>
                <td>
                    <i class="ss ss-{{card.setCode}} ss-fw"></i>
                    <a href="/sets/{{card.setCode}}">{{card.setCode}}</a>
                </td>
                <td>{{#if card.price}}{{card.price}}{{else}}0{{/if}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
