<div class='settings-container'>
    <h2 class='page-title'>User Settings</h2>

    <div class='section-container'>
        <h3 class='page-subtitle'>Edit Profile</h3>
        <form id='user-update-form' class='mt-6' novalidate>
            <div class='mb-4'>
                <label class='input-label' for='user-name'>User Name</label>
                <input
                    id='user-name'
                    class='input-field'
                    type='text'
                    name='name'
                    value='{{user.name}}'
                    required
                    minlength='6'
                    maxlength='50'
                    pattern='^[a-zA-Z0-9 _-]+$'
                />
            </div>
            <div class='mb-4'>
                <label class='input-label' for='user-email'>Email</label>
                <input
                    id='user-email'
                    class='input-field'
                    type='email'
                    name='email'
                    value='{{user.email}}'
                    required
                    maxlength='255'
                />
            </div>
            <button id='update-user-btn' class='btn btn-primary' type='submit'>Submit</button>
        </form>
    </div>
    <div class='section-container'>
        <h3 class='page-subtitle'>Change Password</h3>
        <form id='password-update-form' class='mt-6' novalidate>
            <div class='mb-4'>
                <label class='input-label' for='new-password'>New Password</label>
                <input
                    id='new-password'
                    class='input-field'
                    type='password'
                    name='password'
                    required
                    minlength='8'
                    maxlength='128'
                />
                <p class='password-requirements'>Min 8 characters: 1 uppercase, 1 lowercase, 1 number, 1 special character</p>
            </div>
            <button id='update-password-btn' class='btn btn-secondary' type='submit'>Update Password</button>
        </form>
    </div>
    <div class='section-container border-l-4 border-hotpink-500 dark:border-hotpink-400'>
        <h3 class='page-subtitle text-hotpink-600 dark:text-hotpink-400'>Delete User Account</h3>
        <button id='delete-user-btn' class='btn btn-danger' type='submit'>Delete User</button>
    </div>
</div>
<script src='/public/js/form-validation.js'></script>
<script src='/public/js/user-settings.js'></script>
