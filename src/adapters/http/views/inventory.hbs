<section class="border border-teal-100 sm:m-0 md:m-4">
    <section class="text-center bg-teal-100 mb-4">
        <h3 class="page-title">{{this.username}}'s Inventory</h3>
        <p>Value: ${{#if this.value}}{{this.value}}{{else}}0.00{{/if}}</p>
    </section>

    <table class="table-container w-full">
        <thead>
            <tr class="table-header-row">
                <th class="table-header pl-2">Owned</th>
                <th class="table-header">Name</th>
                <th class="table-header">Set</th>
                <th class="table-header">Price</th>
                <th class="table-header pr-2">Delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each cards}}
            <tr class="table-row">
                <td class="cards-owned-td pl-2">{{>cardsOwned card=this}}</td>
                <td class="inventory-item" data-id="{{this.id}}" data-img-src="{{this.imgSrc}}">
                    <a href="{{this.url}}">{{this.name}}</a>
                    {{>reserved card=this}}
                    <a href="{{this.url}}" class="card-img-link">
                        <img src="{{this.imgSrc}}" alt="{{this.name}}" class="card-img-preview" />
                    </a>
                </td>
                <td>
                    <a href="/sets/{{this.setCode}}">
                        <i class="ss ss-{{this.setCode}} ss-{{toLowerCase this.rarity}} ss-fw"></i>
                        {{toUpperCase this.setCode}}
                    </a>
                </td>
                <td>
                    {{#each this.prices}}
                        ${{#if this.normal}}
                            {{this.normal}}
                        {{else if this.foil}}
                            {{this.foil}}
                        {{else}}
                            0.00
                        {{/if}}
                    {{/each}}
                </td>
                <td class="delete-inventory-entry pr-2">
                    {{>deleteInventoryEntry card=this}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>
<script src="/public/js/updateInventory.js" defer></script>