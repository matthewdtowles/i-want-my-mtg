<span class="quantity-owned-controller">
  <button class="remove-card-btn">
    <span class="minus">-</span>
  </button>
  <span class="quantity-owned">{{#if this.quantity}}{{this.quantity}}{{else}}0{{/if}}</span>
  <button class="add-card-btn"> 
    <span class="plus">+</span>
  </button>
</span>
