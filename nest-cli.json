{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [
            {
                "include": "http/views/**/*",
                "outDir": "dist"
            },
            {
                "include": "http/public/**/*",
                "outDir": "dist"
            }
        ]
    }
}