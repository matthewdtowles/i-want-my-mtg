<div class="text-center py-16 px-4 max-w-xl mx-auto">
    <div class="font-display text-8xl font-bold text-teal-500 dark:text-teal-400 mb-4">401</div>
    <div class="text-2xl font-semibold text-gray-800 dark:text-gray-200 mb-4">Access Denied</div>
    <div class="text-lg text-gray-500 dark:text-gray-400 mb-8">
        {{#if toast}}
            {{toast.message}}
        {{else}}
            You need to be logged in to access this page.
        {{/if}}
    </div>
    <div class="flex gap-4 justify-center flex-wrap">
        <a href="/auth/login" class="btn btn-primary">Sign In</a>
        <a href="/" class="btn btn-secondary">Go Home</a>
    </div>
</div>
