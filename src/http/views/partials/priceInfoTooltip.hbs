<button type="button"
    class="price-info-tooltip-trigger absolute top-2 right-2 text-{{iconColor}}-600 hover:text-{{iconColor}}-800 transition-colors group"
    aria-label="{{title}}" data-tooltip-type="{{type}}" data-base-size="{{baseSize}}" data-total-size="{{totalSize}}">
    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd"
            d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
            clip-rule="evenodd" />
    </svg>
</button>
<div
    class="price-info-tooltip hidden absolute top-8 right-2 bg-gray-900 text-white text-xs rounded p-2 shadow-lg z-10 w-48">
    <p class="mb-1 font-semibold">{{title}}</p>
    <p class="tooltip-description"></p>
    <div class="absolute top-0 right-3 -mt-1 w-2 h-2 bg-gray-900 transform rotate-45"></div>
</div>