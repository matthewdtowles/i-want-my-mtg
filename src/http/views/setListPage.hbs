<table class="min-w-full bg-white">
    <thead>
        <tr class="table-header-row">
            <th class="table-header pl-2">Set</th>
            <th class="table-header">Price</th>
            <th class="table-header">Owned</th>
            <th class="table-header pr-2">Release Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each setList}}
        <tr class="table-row">
            <td class="py-2 pl-2">
                <i class="ss ss-{{this.keyruneCode}} ss-fw"></i>
                <a href="{{this.url}}" class="table-link">{{this.name}}</a>
            </td>
            <td class="py-2">${{this.totalValue}}</td>
            <td class="py-2">
                <div class="relative w-full h-6 bg-gray-200 rounded">
                    <div class="absolute top-0 left-0 h-full bg-teal-500 rounded"
                        style="width: {{this.ownedPercentage}}%;"></div>
                    <span class="absolute inset-0 flex items-center justify-center text-black font-bold">
                        ${{this.ownedValue}}
                    </span>
                </div>
            </td>
            <td class="py-2 pr-2">{{this.releaseDate}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<div class="pagination flex items-center justify-center space-x-1 mt-4">
    {{#if this.pagination.hasPrevPage}}
    <a href="/sets?page={{this.pagination.prevPage}}"
        class="pagination-link px-3 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Previous</a>
    {{/if}}

    {{#each this.pagination.prevPages}}
    <a href="/sets?page={{this}}"
        class="pagination-link px-3 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300">{{this}}</a>
    {{/each}}

    <span class="pagination-current px-3 py-2 bg-blue-600 text-white rounded">{{this.pagination.currentPage}}</span>

    {{#each this.pagination.nextPages}}
    <a href="/sets?page={{this}}"
        class="pagination-link px-3 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300">{{this}}</a>
    {{/each}}

    {{#if this.pagination.hasNextPage}}
    <a href="/sets?page={{this.pagination.nextPage}}"
        class="pagination-link px-3 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Next</a>
    {{/if}}
</div>