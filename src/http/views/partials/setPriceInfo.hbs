<div class="set-price-info">
    <button type="button" id="price-info-toggle"
        class="inline-flex items-center space-x-2 px-4 py-2 bg-teal-600 hover:bg-teal-700 text-white rounded-lg transition-colors duration-200 shadow-md hover:shadow-lg"
        aria-label="View detailed set pricing">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z">
            </path>
        </svg>
        <span class="font-semibold">View Set Prices</span>
    </button>

    {{! Modal/Popup }}
    <div id="price-info-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 p-4"
        role="dialog" aria-modal="true" aria-labelledby="modal-title">
        <div class="bg-white rounded-xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-hidden">
            {{! Header }}
            <div class="bg-teal-600 text-white px-6 py-4 flex items-center justify-between">
                <h3 id="modal-title" class="text-xl font-bold flex items-center space-x-2">
                    <i class="ss ss-{{set.keyruneCode}} ss-2x"></i>
                    <span>{{set.name}} Pricing</span>
                </h3>
                <button type="button" id="close-modal" class="text-white hover:text-gray-200 transition-colors"
                    aria-label="Close pricing details">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                        </path>
                    </svg>
                </button>
            </div>

            {{! Content }}
            <div class="p-6 overflow-y-auto max-h-[calc(90vh-80px)]">
                <div class="mb-4 text-sm text-gray-600 bg-blue-50 border-l-4 border-blue-400 p-3 rounded">
                    <p><strong>Base Set:</strong> Only main set cards (numbers 1-{{set.baseSize}})</p>
                    <p class="mt-1"><strong>All Cards:</strong> Base set + bonus/extended cards</p>
                </div>

                {{! Price Grid }}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    {{! Base Set - Normal }}
                    <div
                        class="border border-gray-300 rounded-lg p-4 bg-gradient-to-br from-white to-gray-50 hover:shadow-lg transition-shadow">
                        <div class="flex items-center justify-between mb-2">
                            <h4 class="font-semibold text-gray-700 text-sm uppercase tracking-wide">Base Set</h4>
                            <span class="text-xs bg-gray-200 text-gray-700 px-2 py-1 rounded">Normal Only</span>
                        </div>
                        <div class="text-3xl font-bold text-gray-900 font-mono">
                            ${{set.basePriceNormal}}
                        </div>
                        <div class="text-xs text-gray-500 mt-2">
                            {{set.baseSize}} cards
                        </div>
                    </div>

                    {{! Base Set - With Foils }}
                    <div
                        class="border border-purple-300 rounded-lg p-4 bg-gradient-to-br from-purple-50 to-white hover:shadow-lg transition-shadow">
                        <div class="flex items-center justify-between mb-2">
                            <h4 class="font-semibold text-purple-700 text-sm uppercase tracking-wide">Base Set</h4>
                            <span class="text-xs bg-purple-200 text-purple-800 px-2 py-1 rounded">+ Foils</span>
                        </div>
                        <div class="text-3xl font-bold text-purple-900 font-mono">
                            ${{set.basePriceAll}}
                        </div>
                        <div class="text-xs text-purple-600 mt-2">
                            {{set.baseSize}} cards (normal + foil variants)
                        </div>
                    </div>

                    {{! All Cards - Normal }}
                    <div
                        class="border border-teal-300 rounded-lg p-4 bg-gradient-to-br from-white to-teal-50 hover:shadow-lg transition-shadow">
                        <div class="flex items-center justify-between mb-2">
                            <h4 class="font-semibold text-teal-700 text-sm uppercase tracking-wide">All Cards</h4>
                            <span class="text-xs bg-gray-200 text-gray-700 px-2 py-1 rounded">Normal Only</span>
                        </div>
                        <div class="text-3xl font-bold text-teal-900 font-mono">
                            ${{set.totalPriceNormal}}
                        </div>
                        <div class="text-xs text-teal-600 mt-2">
                            {{set.totalSize}} cards
                        </div>
                    </div>

                    {{! All Cards - With Foils }}
                    <div
                        class="border border-indigo-300 rounded-lg p-4 bg-gradient-to-br from-indigo-50 to-white hover:shadow-lg transition-shadow">
                        <div class="flex items-center justify-between mb-2">
                            <h4 class="font-semibold text-indigo-700 text-sm uppercase tracking-wide">All Cards</h4>
                            <span class="text-xs bg-indigo-200 text-indigo-800 px-2 py-1 rounded">+ Foils</span>
                        </div>
                        <div class="text-3xl font-bold text-indigo-900 font-mono">
                            ${{set.totalPriceAll}}
                        </div>
                        <div class="text-xs text-indigo-600 mt-2">
                            {{set.totalSize}} cards (normal + foil variants)
                        </div>
                    </div>
                </div>

                {{! Comparison Section }}
                {{#if (gt set.totalSize set.baseSize)}}
                <div class="mt-6 p-4 bg-amber-50 border border-amber-200 rounded-lg">
                    <h5 class="font-semibold text-amber-900 mb-2 flex items-center space-x-2">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                                clip-rule="evenodd"></path>
                        </svg>
                        <span>Bonus Cards Impact</span>
                    </h5>
                    <div class="grid grid-cols-2 gap-4 text-sm">
                        <div>
                            <p class="text-gray-600">Bonus Cards Count:</p>
                            <p class="font-bold text-amber-900">{{subtract set.totalSize set.baseSize}}</p>
                        </div>
                        <div>
                            <p class="text-gray-600">Bonus Value (Normal):</p>
                            <p class="font-bold text-amber-900">${{subtract set.totalPriceNormal set.basePriceNormal}}
                            </p>
                        </div>
                    </div>
                </div>
                {{/if}}

                {{! Price Updated Date }}
                {{#if set.priceUpdatedAt}}
                <div class="mt-4 text-xs text-gray-500 text-center">
                    Prices last updated: {{formatDate set.priceUpdatedAt}}
                </div>
                {{/if}}
            </div>

            {{! Footer }}
            <div class="bg-gray-50 px-6 py-4 flex justify-end">
                <button type="button"
                    class="close-modal-btn px-4 py-2 bg-gray-300 hover:bg-gray-400 text-gray-800 rounded-lg transition-colors font-medium">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    (function () {
        const toggleBtn = document.getElementById('price-info-toggle');
        const modal = document.getElementById('price-info-modal');
        const closeBtn = document.getElementById('close-modal');
        const closeFooterBtn = document.querySelector('.close-modal-btn');

        if (!toggleBtn || !modal) return;

        function openModal() {
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            modal.classList.add('hidden');
            modal.classList.remove('flex');
            document.body.style.overflow = '';
        }

        toggleBtn.addEventListener('click', openModal);
        closeBtn?.addEventListener('click', closeModal);
        closeFooterBtn?.addEventListener('click', closeModal);

        // Close on outside click
        modal.addEventListener('click', (e) => {
            if (e.target === modal) {
                closeModal();
            }
        });

        // Close on Escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
                closeModal();
            }
        });
    })();
</script>