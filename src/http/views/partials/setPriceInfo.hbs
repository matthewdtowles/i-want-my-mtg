<div class="set-price-info inline-block relative">
    <button type="button" id="price-info-toggle"
        class="inline-flex items-center space-x-2 px-3 py-1.5 btn btn-primary text-sm"
        aria-label="View detailed set prices">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z">
            </path>
        </svg>
        <span class="font-semibold">View Set Prices</span>
    </button>

    {{! Popover }}
    <div id="price-info-popover" class="absolute hidden left-1/2 transform -translate-x-1/2 mt-2 w-full max-w-2xl z-50"
        role="dialog" aria-modal="false" aria-labelledby="popover-title">
        <div id="popover-content"
            class="bg-white rounded-lg shadow-2xl border-2 border-teal-500 overflow-hidden max-h-[80vh] overflow-y-auto">
            {{! Header }}
            <div class="bg-teal-500 text-white px-6 py-4 flex items-center justify-between sticky top-0 z-10">
                <h3 id="popover-title" class="text-xl font-bold flex items-center space-x-2">
                    <i class="ss ss-{{set.keyruneCode}} ss-2x"></i>
                    <span>{{set.name}} Prices</span>
                </h3>
                <button type="button" id="close-popover" class="text-white hover:text-teal-100 transition-colors"
                    aria-label="Close price details">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                        </path>
                    </svg>
                </button>
            </div>

            {{! Content }}
            <div class="p-6">
                <div class="mb-4 text-sm text-gray-700 bg-teal-50 border-l-4 border-teal-400 p-3 rounded">
                    <p><strong>Base Set:</strong> Only main set cards (numbers 1-{{set.baseSize}})</p>
                    <p class="mt-1"><strong>All Cards:</strong> Base set + bonus/extended cards
                        ({{set.totalSize}} total)</p>
                </div>

                {{! Price Grid }}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    {{! Base Set - Normal }}
                    <div class="border border-teal-300 rounded-lg p-4 bg-white hover:shadow-md transition-shadow">
                        <div class="flex items-center justify-between mb-2">
                            <h4 class="font-semibold text-teal-700 text-sm uppercase tracking-wide">Base Set</h4>
                            <span class="text-xs bg-teal-100 text-teal-700 px-2 py-1 rounded">Normal Only</span>
                        </div>
                        <div class="text-3xl font-bold text-gray-900 font-mono">
                            {{#if set.prices.basePriceNormal}}
                            {{set.prices.basePriceNormal}}
                            {{else}}
                            <span class="text-gray-400">No Price</span>
                            {{/if}}
                        </div>
                        <div class="text-xs text-gray-600 mt-2">{{set.baseSize}} cards</div>
                    </div>

                    {{! Base Set - With Foils }}
                    <div class="border border-purple-300 rounded-lg p-4 bg-purple-50 hover:shadow-md transition-shadow">
                        <div class="flex items-center justify-between mb-2">
                            <h4 class="font-semibold text-purple-700 text-sm uppercase tracking-wide">Base Set</h4>
                            <span class="text-xs bg-purple-200 text-purple-800 px-2 py-1 rounded">+ Foils</span>
                        </div>
                        <div class="text-3xl font-bold text-purple-900 font-mono">
                            {{#if set.prices.basePriceAll}}
                            {{set.prices.basePriceAll}}
                            {{else}}
                            <span class="text-purple-300">No Price</span>
                            {{/if}}
                        </div>
                        <div class="text-xs text-purple-700 mt-2">{{set.baseSize}} cards (normal + foil variants)</div>
                    </div>

                    {{! All Cards - Normal }}
                    <div class="border border-teal-300 rounded-lg p-4 bg-teal-50 hover:shadow-md transition-shadow">
                        <div class="flex items-center justify-between mb-2">
                            <h4 class="font-semibold text-teal-700 text-sm uppercase tracking-wide">All Cards</h4>
                            <span class="text-xs bg-teal-100 text-teal-700 px-2 py-1 rounded">Normal Only</span>
                        </div>
                        <div class="text-3xl font-bold text-teal-900 font-mono">
                            {{#if set.prices.totalPriceNormal}}
                            {{set.prices.totalPriceNormal}}
                            {{else}}
                            <span class="text-teal-300">No Price</span>
                            {{/if}}
                        </div>
                        <div class="text-xs text-teal-700 mt-2">{{set.totalSize}} cards</div>
                    </div>

                    {{! All Cards - With Foils }}
                    <div class="border border-purple-300 rounded-lg p-4 bg-purple-50 hover:shadow-md transition-shadow">
                        <div class="flex items-center justify-between mb-2">
                            <h4 class="font-semibold text-purple-700 text-sm uppercase tracking-wide">All Cards</h4>
                            <span class="text-xs bg-purple-200 text-purple-800 px-2 py-1 rounded">+ Foils</span>
                        </div>
                        <div class="text-3xl font-bold text-purple-900 font-mono">
                            {{#if set.prices.totalPriceAll}}
                            {{set.prices.totalPriceAll}}
                            {{else}}
                            <span class="text-purple-300">No Price</span>
                            {{/if}}
                        </div>
                        <div class="text-xs text-purple-700 mt-2">{{set.totalSize}} cards (normal + foil variants)</div>
                    </div>
                </div>

                {{! Set Information }}
                <div class="mt-6 p-4 bg-teal-50 border border-teal-200 rounded-lg">
                    <h5 class="font-semibold text-teal-900 mb-2 flex items-center space-x-2">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                                clip-rule="evenodd"></path>
                        </svg>
                        <span>Set Information</span>
                    </h5>
                    <div class="grid grid-cols-2 gap-4 text-sm">
                        <div>
                            <p class="text-gray-600">Base Set Size:</p>
                            <p class="font-bold text-teal-900">{{set.baseSize}} cards</p>
                        </div>
                        <div>
                            <p class="text-gray-600">Total with Bonus:</p>
                            <p class="font-bold text-teal-900">{{set.totalSize}} cards</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    (function () {
        const toggleBtn = document.getElementById("price-info-toggle");
        const popover = document.getElementById("price-info-popover");
        const closeBtn = document.getElementById("close-popover");
        const popoverContent = document.getElementById("popover-content");

        if (!toggleBtn || !popover) return;

        function openPopover(e) {
            e.stopPropagation();
            popover.classList.remove("hidden");
        }

        function closePopover() {
            popover.classList.add("hidden");
        }

        toggleBtn.addEventListener("click", openPopover);
        closeBtn?.addEventListener("click", closePopover);

        // Close when clicking outside the popover
        document.addEventListener("click", (e) => {
            if (!popover.classList.contains("hidden") && 
            !popoverContent.contains(e.target) && 
            !toggleBtn.contains(e.target)) {
            closePopover();
            }
        });


        // Prevent clicks inside popover from closing it
        popoverContent?.addEventListener("click", (e) => {
            e.stopPropagation();
        });

        // Close on Escape
        document.addEventListener("keydown", (e) => {
            if (e.key === "Escape" && !popover.classList.contains("hidden")) {
                closePopover();
            }
        });
    })();
</script>