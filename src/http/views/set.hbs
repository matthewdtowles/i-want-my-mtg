<link href="//cdn.jsdelivr.net/npm/mana-font@latest/css/mana.min.css" rel="stylesheet" type="text/css" />
<div id="set-header-container" class="relative">
    <section class="text-center bg-teal-100 mb-4 pb-4">
        <h3 class="page-title flex items-center justify-center space-x-2">
            <i class="ss ss-{{set.keyruneCode}} ss-2x"></i>
            <span>{{set.name}}</span>
        </h3>
        <ul class="mt-4 space-y-2">
            <li class="text-gray-700">Block: {{set.block}}</li>
            <li class="text-gray-700">Code: {{toUpperCase set.code}}</li>
            <li class="text-gray-700">Release Date: {{set.releaseDate}}</li>
            <li class="text-gray-700">Set Price: {{set.prices.defaultPrice}}</li>
            {{#if authenticated}}
            <li class="text-gray-700">Total Owned: {{set.ownedTotal}}/{{set.baseSize}}</li>
            <li class="text-gray-700">Owned Value: {{set.ownedValue}}</li>
            <li class="text-gray-700">{{>completionRate set}}</li>
            {{/if}}
        </ul>

        {{! Popover - positioned relative to #set-header-container }}
        <div id="price-info-popover" class="absolute hidden left-4 right-4 top-full mt-2 z-50" role="dialog"
            aria-modal="false" aria-labelledby="popover-title">
            <div id="popover-content"
                class="bg-white rounded-lg shadow-2xl border-2 border-teal-500 overflow-hidden max-h-[70vh] overflow-y-auto mx-auto max-w-6xl">
                {{! Header }}
                <div class="bg-teal-500 text-white px-4 py-3 flex items-center justify-between sticky top-0 z-10">
                    <h3 id="popover-title" class="text-lg md:text-xl font-bold flex items-center space-x-2">
                        <i class="ss ss-{{set.keyruneCode}} ss-2x"></i>
                        <span>{{set.name}} Prices</span>
                    </h3>
                    <button type="button" id="close-popover" class="text-white hover:text-teal-100 transition-colors"
                        aria-label="Close price details">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M6 18L18 6M6 6l12 12">
                            </path>
                        </svg>
                    </button>
                </div>

                {{! Content }}
                <div class="p-4 md:p-6">
                    <div
                        class="mb-4 text-xs md:text-sm text-gray-700 bg-teal-50 border-l-4 border-teal-400 p-3 rounded">
                        {{#if set.baseSize }}
                        <p><strong>Base Set:</strong> Only main set cards (numbers 1-{{set.baseSize}})</p>
                        {{/if}}
                        {{#if (eq set.baseSize set.totalSize)}}
                        <span></span>
                        {{else}}
                        <p class="mt-1">
                            <strong>All Cards:</strong> Base set + bonus/extended cards
                            ({{set.totalSize}} total)
                        </p>
                        {{/if}}
                    </div>

                    {{! Price Grid - responsive: vertical on mobile, 2 cols on tablet, 4 cols on desktop }}
                    {{!-- <div
                        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-{{set.prices.gridCols}} gap-3 md:gap-4">
                        --}}
                        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3 md:gap-4">
                            {{! Base Set - Normal }}
                            {{#if set.prices.basePriceNormal}}
                            <div
                                class="border border-teal-300 rounded-lg p-3 md:p-4 bg-white hover:shadow-md transition-shadow">
                                <div class="flex flex-col mb-2">
                                    <h4 class="font-semibold text-teal-700 text-xs md:text-sm uppercase tracking-wide">
                                        Base Set
                                    </h4>
                                    <span
                                        class="text-xs bg-teal-100 text-teal-700 px-2 py-1 rounded mt-1 inline-block self-start">
                                        Normal Only
                                    </span>
                                </div>
                                <div class="text-2xl md:text-3xl font-bold text-gray-900 font-mono">
                                    {{set.prices.basePriceNormal}}
                                </div>
                                <div class="text-xs text-gray-600 mt-2">{{set.baseSize}} cards</div>
                            </div>
                            {{/if}}

                            {{! Base Set - With Foils }}
                            {{#if set.prices.basePriceAll}}
                            <div
                                class="border border-purple-300 rounded-lg p-3 md:p-4 bg-purple-50 hover:shadow-md transition-shadow">
                                <div class="flex flex-col mb-2">
                                    <h4
                                        class="font-semibold text-purple-700 text-xs md:text-sm uppercase tracking-wide">
                                        Base Set
                                    </h4>
                                    <span
                                        class="text-xs bg-purple-200 text-purple-800 px-2 py-1 rounded mt-1 inline-block self-start">
                                        + Foils
                                    </span>
                                </div>
                                <div class="text-2xl md:text-3xl font-bold text-purple-900 font-mono">
                                    {{set.prices.basePriceAll}}
                                </div>
                                <div class="text-xs text-purple-700 mt-2">
                                    {{set.baseSize}} cards (normal + foil variants)
                                </div>
                            </div>
                            {{/if}}

                            {{! All Cards - Normal }}
                            {{#if set.prices.totalPriceNormal}}
                            <div
                                class="border border-teal-300 rounded-lg p-3 md:p-4 bg-teal-50 hover:shadow-md transition-shadow">
                                <div class="flex flex-col mb-2">
                                    <h4 class="font-semibold text-teal-700 text-xs md:text-sm uppercase tracking-wide">
                                        All Cards
                                    </h4>
                                    <span
                                        class="text-xs bg-teal-100 text-teal-700 px-2 py-1 rounded mt-1 inline-block self-start">
                                        Normal Only
                                    </span>
                                </div>
                                <div class="text-2xl md:text-3xl font-bold text-teal-900 font-mono">
                                    {{set.prices.totalPriceNormal}}
                                </div>
                                <div class="text-xs text-teal-700 mt-2">{{set.totalSize}} cards</div>
                            </div>
                            {{/if}}

                            {{! All Cards - With Foils }}
                            {{#if set.prices.totalPriceAll}}
                            <div
                                class="border border-purple-300 rounded-lg p-3 md:p-4 bg-purple-50 hover:shadow-md transition-shadow">
                                <div class="flex flex-col mb-2">
                                    <h4
                                        class="font-semibold text-purple-700 text-xs md:text-sm uppercase tracking-wide">
                                        All Cards
                                    </h4>
                                    <span
                                        class="text-xs bg-purple-200 text-purple-800 px-2 py-1 rounded mt-1 inline-block self-start">
                                        + Foils
                                    </span>
                                </div>
                                <div class="text-2xl md:text-3xl font-bold text-purple-900 font-mono">
                                    {{set.prices.totalPriceAll}}
                                </div>
                                <div class="text-xs text-purple-700 mt-2">
                                    {{set.totalSize}} cards (normal + foil variants)
                                </div>
                            </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
            {{! End Set Price Info }}
            <button type="button" id="price-info-toggle"
                class="inline-flex items-center space-x-2 px-3 py-1.5 btn btn-primary text-sm"
                aria-label="View detailed set prices">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z">
                    </path>
                </svg>
                <span class="font-semibold">More Price Info</span>
            </button>
    </section>
</div>

<div class="w-full mx-auto">
    {{>filter}}
    <table class="table-container">
        <thead>{{>tableHeadersRow}}</thead>
        <tbody>
            {{#each set.cards}}
            <tr class="table-row">
                <td class="py-2 pl-2">
                    {{>inventoryCtrl card=this}}
                </td>
                <td class="py-2">{{this.number}}</td>
                <td class="card-name-link py-2" data-id="{{this.cardId}}" data-img-src="{{this.imgSrc}}">
                    <a href="{{this.url}}">{{this.name}}</a>
                    {{>reserved card=this}}
                    <a href="{{this.url}}" class="card-img-link">
                        <img src="{{this.imgSrc}}" alt="{{this.name}}" class="card-img-preview" />
                    </a>
                </td>
                <td class="py-2 xs-hide">{{>manaCost card=this}}</td>
                <td class="py-2 xs-hide">{{this.rarity}}</td>
                <td class="py-2 xs-hide">
                    {{#if this.hasNormal}}
                    <span class="price-normal">{{this.normalPrice}}</span>
                    {{/if}}
                </td>
                <td class="py-2 pr-2 xs-hide">
                    {{#if this.hasFoil}}
                    <span class="price-foil">{{this.foilPrice}}</span>
                    {{/if}}
                </td>
                <td class="py-2 pr-2 xs-show">
                    {{#if this.hasFoil}}
                    <span class="price-foil">{{this.foilPrice}}</span>
                    {{/if}}
                    {{#if this.hasNormal}}
                    <span class="price-normal">{{this.normalPrice}}</span>
                    {{/if}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{>pagination}}

<script>
    (function () {
        const toggleBtn = document.getElementById("price-info-toggle");
        const popover = document.getElementById("price-info-popover");
        const closeBtn = document.getElementById("close-popover");
        const popoverContent = document.getElementById("popover-content");

        if (!toggleBtn || !popover) return;

        function openPopover(e) {
            e.preventDefault();
            e.stopPropagation();
            popover.classList.remove("hidden");
            popover.setAttribute("aria-modal", "true");
            // Move focus to close button for accessibility
            closeBtn?.focus();
        }

        function closePopover(e) {
            if (e) {
                e.preventDefault();
                e.stopPropagation();
            }
            popover.classList.add("hidden");
            popover.setAttribute("aria-modal", "false");
            // Return focus to toggle button for accessibility
            toggleBtn.focus();
        }

        toggleBtn.addEventListener("click", openPopover);
        closeBtn?.addEventListener("click", closePopover);

        // Close when clicking outside the popover
        document.addEventListener("click", (e) => {
            if (!popover.classList.contains("hidden") &&
                !popoverContent.contains(e.target) &&
                !toggleBtn.contains(e.target)) {
                closePopover();
            }
        });

        // Prevent clicks inside popover from closing it
        popoverContent?.addEventListener("click", (e) => {
            e.stopPropagation();
        });

        // Close on Escape
        document.addEventListener("keydown", (e) => {
            if (e.key === "Escape" && !popover.classList.contains("hidden")) {
                closePopover();
            }
        });

        // Trap focus inside popover when open
        popover.addEventListener("keydown", (e) => {
            if (e.key === "Tab" && !popover.classList.contains("hidden")) {
                const focusableElements = popover.querySelectorAll(
                    'button, [href], input, select, textarea, [tabindex]:not([tabindex="-1"])'
                );
                const firstFocusable = focusableElements[0];
                const lastFocusable = focusableElements[focusableElements.length - 1];

                if (e.shiftKey && document.activeElement === firstFocusable) {
                    e.preventDefault();
                    lastFocusable.focus();
                } else if (!e.shiftKey && document.activeElement === lastFocusable) {
                    e.preventDefault();
                    firstFocusable.focus();
                }
            }
        });
    })();
</script>

