<div id="user-inventory">
    <h3 id="user-inventory-heading">{{this.user.name}}'s Inventory</h3>
    <section id="user-inventory-metadata">
        <div id="user-inventory-value" class="user-inventory-metadata-item">
            <p class="user-inventory-metadata-heading">Value</p>
            <p class="user-inventory-metadata-data">{{this.value}}</p>
        </div>
   </section>

    <table id="user-inventory-cards">
        <thead>
            <tr>
                <th>Owned</th>
                <th>Name</th>
                <th>Set</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
        {{#each inventory}}
            <tr>
                <td>{{>cardsOwned}}</td>
                <td>
                    <a href="{{this.card.url}}">{{this.card.name}}</a>
                    <img src="{{this.card.imgSrc}}" alt="{{this.card.name}}" />
                </td>
                <td>
                    <i class="ss ss-{{this.card.setCode}} ss-fw"></i>
                    <a href="/sets/{{this.card.setCode}}">{{this.card.setCode}}</a>
                </td>
                <td>{{#if this.card.price}}{{this.card.price}}{{else}}0{{/if}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
<script src="public/js/updateInventory.js" defer></script>
