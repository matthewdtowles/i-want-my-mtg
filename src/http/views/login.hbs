<div class="login-container">
    <h3 class="page-title">User Login</h3>
    <p class="page-subtitle">Please login to access your account</p>
    <form id="login-form" class="mt-6" method="post" novalidate>
        <div class="mb-4">
            <label class="input-label" for="user-email">Email</label>
            <input id="user-email" class="input-field" type="email" name="email" value="{{this.email}}" required maxlength="255" />
        </div>
        <div class="mb-6">
            <label class="input-label" for="user-password">Password</label>
            <input id="user-password" class="input-field" type="password" name="password" required />
        </div>
        <button id="login-btn" class="btn btn-primary" type="submit">Login</button>
    </form>
    <div class="mt-4 text-center">
        <a href="/auth/forgot-password" class="link">
            Forgot your password?
        </a>
    </div>
</div>
<script src="/public/js/form-validation.js"></script>
<script>
    (function () {
        var FV = window.FormValidator;
        var emailEl = document.getElementById('user-email');

        FV.attachBlurValidation(emailEl, FV.validateEmail);

        document.getElementById('login-form').addEventListener('submit', function (e) {
            var valid = true;
            if (!FV.validateField(emailEl, FV.validateEmail)) valid = false;
            var passwordEl = document.getElementById('user-password');
            if (!passwordEl.value) {
                FV.showFieldError(passwordEl, 'Password is required');
                valid = false;
            } else {
                FV.clearFieldError(passwordEl);
            }
            if (!valid) e.preventDefault();
        });
    })();
</script>
